{% extends "master.html.j2" %}

{% block content %}

{% for category, speakers in speakersContent.items() %}
<div>
    <h2>{{ category | upper }}</h1>
    <br>
    <div class="container">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th width="30%">Name</th>
                    <th width="60%">Information</th>
                    <th width="10%"></th>
                </tr>
            </thead>
            <tbody>
                {% for speaker in speakers %}
                <tr>
                    <td>{{ speaker.name }}</td>
                    <td>{{ speaker.info }}</td>
                    <td>
                        <form
                            action="{{ url_for('edit_flaskSpeaker', speakerCategory=category, position=speaker.position ) }}"
                            method="GET" class="form">
                            <button name="submit" class="btn btn-primary btn-sm">Edit</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<br>
<br>
{% endfor %}



{% endblock %}
